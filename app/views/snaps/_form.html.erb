<%= form_with(model: snap, local: true) do |form| %>
  <% if snap.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(snap.errors.count, "error") %> があるためSnapの作成に失敗しました。</h2>

      <ul>
      <% snap.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :detail %>
    <%= form.text_area :detail %>
  </div>

  <div class="field">
    <%= form.label :images %>
    <%= form.file_field :images, multiple: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
